    "open_at_install": true
  },
  "action": {
    "default_icon": {
      "16": "/assets/images/icon.svg",
      "48": "/assets/images/icon.svg",
      "128": "/assets/images/icon.svg"
    },
    "default_title": "AI Sidebar",
    "default_popup": "sidebar.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "dennyli2004@hotmail.com"
    }
  },
