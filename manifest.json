{
  "manifest_version": 3,
  "name": "AI sidebar for Firefox",
  "version": "3.8.5.2",
  "description": "Sidebar with a search bar, tabs, and popular AI tools",
  "icons": {
    "48": "/assets/images/icon.svg"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "sidebar_action": {
    "default_icon": {
      "16": "/assets/images/icon.svg",
      "48": "/assets/images/icon.svg",
      "128": "/assets/images/icon.svg"
    },
    "default_panel": "sidebar.html",
    "default_title": "AI Sidebar",
    "open_at_install": true
  },
  "action": {
    "default_icon": {
      "16": "/assets/images/icon.svg",
      "48": "/assets/images/icon.svg",
      "128": "/assets/images/icon.svg"
    },
    "default_title": "Sidebar with AI",
    "default_popup": "main.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "dennyli2004@hotmail.com"
    }
  },
  "page_action": {
    "default_icon": {
      "16": "/assets/images/icon.svg",
      "48": "/assets/images/icon.svg",
      "128": "/assets/images/icon.svg"
    }
  },
  "permissions": ["history", "tabs", "contextMenus"]
}
